{% extends 'header.jinja2' %}

{% block content %}
    <div class="container my-5">
        <h1 class="text-center">Crear Nuevo Empleado</h1>

        <form action="" method="post">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            {{form}}
            <div class="my-2">
            <button class="btn btn-success"type="submit" onclick="window.location.href='/empleados'">Crear</button>
            </div>
        </form>
        <div class="mt-2 ">
            <a class="btn btn-primary text-light" class="" href="/api/empleados">
              Volver
            </a>
          </div>
    </div>
{% endblock %}

